# ===========================================
# Basic Application Configuration
# ===========================================
# This file contains the basic application settings.
# Copy this file to .env.db and modify the values as needed.

# ===========================================
# Application Settings
# ===========================================
# Environment mode: development, production, or test
# Development mode enables detailed logging and hot reload
NODE_ENV=development

# Port number the application will listen on
# Default: 3000
PORT=3000

# Application name (used in logs and monitoring)
APP_NAME=MarketInsight

# Application version (semantic versioning recommended)
APP_VERSION=1.0.0

# ===========================================
# Database Configuration
# ===========================================
# Full database connection URL (Prisma-compatible)
# Format: mysql://username:password@host:port/database
# Example: mysql://user:1234@localhost:3306/marketinsight
DATABASE_URL="mysql://user:1234@localhost:3306/marketinsight"

# Database host address
# Use 'localhost' for local development, or your database server IP/hostname
DB_HOST=localhost

# Database port number
# Default MySQL port: 3306
DB_PORT=3306

# Database name
# Create this database before starting the application
DB_NAME=marketinsight

# Database username
# Must have appropriate permissions for the database
DB_USERNAME=user

# Database password
# Keep this secure and do not commit to version control
DB_PASSWORD=1234

# ===========================================
# CORS (Cross-Origin Resource Sharing) Settings
# ===========================================
# Enable or disable CORS
# Set to 'true' to allow cross-origin requests (required for web frontends)
CORS_ENABLED=true

# Allowed origins for CORS requests (comma-separated list)
# Example: http://localhost:3000,https://yourdomain.com
# Use '*' to allow all origins (not recommended for production)
CORS_ORIGINS=http://localhost:3000