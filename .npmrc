# Node Package Manager Configuration
# Ensures consistent npm behavior across all environments

# ============================================
# Installation & Dependency Management
# ============================================

# Use exact versions for reproducible builds
save-exact=true

# Prevent automatic dependency updates
save-prefix=""

# ============================================
# Package Registry
# ============================================

# Use official npm registry
registry=https://registry.npmjs.org/

# ============================================
# Performance
# ============================================

# Increase fetch timeout for slow networks
fetch-timeout=60000
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=120000

# ============================================
# Security & Audit
# ============================================

# Run audit on every install
audit=true

# Fail on high severity vulnerabilities
audit-level=moderate

# ============================================
# Logging
# ============================================

# Display warnings and errors only
loglevel=warn

# ============================================
# Engine Strict
# ============================================

# Enforce Node.js version requirements
engine-strict=true